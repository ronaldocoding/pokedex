<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingVertical="@dimen/padding_medium"
    android:paddingHorizontal="@dimen/padding_medium_1"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pokemonCard"
        android:layout_width="@dimen/pokemon_card_width"
        android:layout_height="@dimen/pokemon_card_height"
        app:cardBackgroundColor="@color/emerald"
        app:cardCornerRadius="@dimen/corner_radius_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pokemonName"
                style="@style/Header5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small_2"
                android:layout_marginTop="@dimen/margin_medium_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Bulbasaur" />

            <TextView
                android:id="@+id/pokemonId"
                style="@style/Subtitle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pokemonName"
                tools:text="#001" />

            <ImageView
                android:id="@+id/firstTypeIcon"
                android:layout_width="@dimen/type_icon_width"
                android:layout_height="@dimen/type_icon_height"
                android:layout_marginStart="@dimen/margin_small_2"
                android:src="@drawable/ic_grass_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pokemonId"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/secondTypeIcon"
                android:layout_width="@dimen/type_icon_width"
                android:layout_height="@dimen/type_icon_height"
                android:layout_marginTop="@dimen/margin_smallest"
                android:src="@drawable/ic_poison_type"
                android:layout_marginStart="@dimen/margin_small_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/firstTypeIcon"
                android:importantForAccessibility="no" />

            <ImageView
                android:id="@+id/pokemonImage"
                android:layout_width="@dimen/pokemon_icon_width"
                android:layout_height="@dimen/pokemon_icon_height"
                android:importantForAccessibility="no"
                android:layout_marginEnd="@dimen/margin_smallest"
                android:layout_marginBottom="@dimen/margin_smallest"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/ic_bulbasaur" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>