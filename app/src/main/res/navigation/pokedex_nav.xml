<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokedex_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="br.com.pokedex.presentation.fragment.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_pokedexFragment"
            app:destination="@id/pokedexFragment" />

    </fragment>

    <fragment
        android:id="@+id/pokedexFragment"
        android:name="br.com.pokedex.presentation.fragment.PokedexFragment"
        tools:layout="@layout/fragment_pokedex">

        <action
            android:id="@+id/action_pokedexFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

    </fragment>

</navigation>