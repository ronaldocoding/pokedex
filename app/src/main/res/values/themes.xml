<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_fire_opal</item>
        <item name="colorSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- AutoCompleteTextView style -->
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@color/bright_gray</item>
        <item name="android:textSize">@dimen/font_size_normal_2</item>
        <item name="android:textColorHint">@color/opaque_bright_gray</item>
        <item name="android:cursorVisible">false</item>
    </style>

</resources>